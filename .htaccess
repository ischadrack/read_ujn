<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Rediriger les URLs sans .php vers les fichiers PHP correspondants
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}\.php -f
    RewriteRule ^(.*)$ $1.php [L]

    # Optionnel : redirection www â†’ non-www ou HTTPS
    # RewriteCond %{HTTPS} off
    # RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>
